        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "prebuild": "npm run tslint && rm -rf ./dist/*",
        "build": "npm run build-ts",
        "build-ts": "tsc",
        "serve-build": "npm run version && node dist/src/server.js",
        "test": "mocha -r ts-node/register",
        "unit": "mocha -r ts-node/register --opts ./test/mocha.unit.opts",
        "posttest": "npm run tslint",
        "version": "echo '@microlink/youtube-dl' ; ./node_modules/@microlink/youtube-dl/bin/youtube-dl --version"
